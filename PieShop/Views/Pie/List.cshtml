@model PieShop.ViewModels.PieListViewModel;

<h1>@Model.CurrentCategory</h1>

<div class="row row-cols-1 row-cols-md-3 g-4">

    @foreach (var pie in Model.Pies)
    {<div>
    <h2>@pie.Name</h2>
    <h2> @pie.Price.ToString("c")</h2>
    <h2> @pie.Category.CategoryName.</h2>

</div>
            
    }

</div>